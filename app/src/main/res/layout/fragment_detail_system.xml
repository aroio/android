<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
      style="@style/TextAppearance.Aroio.Overline"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="16dp"
      android:paddingTop="24dp"
      android:paddingEnd="16dp"
      android:text="@string/detail_system_overline_systeminformation" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/black_200" />

    <!-- Name -->
    <de.abacuselectronics.aroiorc.ui.custom.SublabelView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:indent_type="INDENT"
      app:subtitle="@string/detail_system_name"
      />

    <!-- Running since -->
    <de.abacuselectronics.aroiorc.ui.custom.SublabelView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:indent_type="INDENT"
      app:subtitle="@string/detail_system_running_since"
      />

    <!-- Mac Address cable -->
    <de.abacuselectronics.aroiorc.ui.custom.SublabelView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:indent_type="INDENT"
      app:subtitle="@string/detail_system_mac_address_cable"
      />

    <!-- Mac Address wlan -->
    <de.abacuselectronics.aroiorc.ui.custom.SublabelView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:indent_type="INDENT"
      app:subtitle="@string/detail_system_mac_address_wlan"
      />

    <!-- IP Address cable -->
    <de.abacuselectronics.aroiorc.ui.custom.SublabelView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:indent_type="INDENT"
      app:subtitle="@string/detail_system_ip_address_cable"
      />

    <!-- IP Address wlan -->
    <de.abacuselectronics.aroiorc.ui.custom.SublabelView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:indent_type="INDENT"
      app:subtitle="@string/detail_system_ip_address_wlan"
      />

    <!-- Squeezeserver -->
    <de.abacuselectronics.aroiorc.ui.custom.SublabelView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:indent_type="INDENT"
      app:subtitle="@string/detail_system_squeezeserver"
      />

    <!-- Update overline -->
    <androidx.appcompat.widget.AppCompatTextView
      style="@style/TextAppearance.Aroio.Overline"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="16dp"
      android:paddingTop="24dp"
      android:paddingEnd="16dp"
      android:text="@string/detail_system_overline_update" />

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/black_200" />


  </LinearLayout>

</ScrollView>