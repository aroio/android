<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="@color/white"
  android:foreground="?android:attr/selectableItemBackground"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/aroio_list_ip_address"
    style="@style/TextAppearance.Aroio.Overline"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:textColor="@color/black_400"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="192.168.1.53" />

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/aroio_list_name"
    style="@style/TextAppearance.Aroio.Subtitle1"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textColor="@color/black_500"
    app:layout_constraintStart_toStartOf="@id/aroio_list_ip_address"
    app:layout_constraintTop_toBottomOf="@id/aroio_list_ip_address"
    tools:text="Name of an Aroio" />

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/aroio_list_arrow_right"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginEnd="16dp"
    app:srcCompat="@drawable/ic_chevron"
    android:tint="@color/black_400"
    app:layout_constraintBottom_toBottomOf="@id/aroio_list_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/aroio_list_ip_address" />

  <View
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginTop="12dp"
    android:background="@color/black_200"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/aroio_list_name"
    app:layout_constraintTop_toBottomOf="@id/aroio_list_name" />

</androidx.constraintlayout.widget.ConstraintLayout>